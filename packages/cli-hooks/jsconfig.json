{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "checkJs": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "jsdoc": {
    "out": "support/jsdoc",
    "access": "public"
  }
}

