{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "extends": ["../../biome.json"],
  "overrides": [
    {
      "includes": ["**/src/types/response/**/*.ts"],
      "linter": {
        "rules": {
          "complexity": {
            "noBannedTypes": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["src/index.ts"],
      "assist": {
        "actions": {
          "source": {
            "organizeImports": "off"
          }
        }
      }
    }
  ]
}
