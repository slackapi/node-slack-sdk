{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
  },
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "jsdoc": {
    "out": "support/jsdoc",
    "access": "public"
  },
  "exclude": [
    "src/**/*.js"
  ],
  "ts-node": {
    "esm": true
  }
}
