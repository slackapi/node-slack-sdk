{
  "name": "@slack/events-api",
  "version": "3.0.1",
  "description": "Official library for using the Slack Platform's Web API",
  "author": "Slack Technologies, LLC",
  "license": "MIT",
  "keywords": [
    "slack",
    "events-api",
    "bot",
    "server",
    "http",
    "api",
    "verify",
    "signature",
    "request-signing",
    "event-emitter"
  ],
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "slack-verify": "dist/verify.js"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=12.13.0",
    "npm": ">=6.12.0"
  },
  "repository": "slackapi/node-slack-sdk",
  "homepage": "https://slack.dev/node-slack-sdk/events-api",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/slackapi/node-slack-sdk/issues"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:clean && tsc",
    "build:clean": "shx rm -rf ./dist ./coverage ./.nyc_output",
    "lint": "eslint --ext .ts src",
    "test": "npm run lint && npm run build && npm run test:mocha",
    "test:mocha": "nyc mocha --config .mocharc.json src/*.spec.js test/integration/*.js",
    "coverage": "codecov -F eventsapi --root=$PWD",
    "ref-docs:model": "api-extractor run"
  },
  "dependencies": {
    "@types/debug": "^4.1.4",
    "@types/express": "^4.17.0",
    "@types/lodash.isstring": "^4.0.6",
    "@types/node": ">=12.13.0 < 13",
    "@types/yargs": "^15.0.4",
    "debug": "^2.6.1",
    "lodash.isstring": "^4.0.1",
    "raw-body": "^2.3.3",
    "tsscmp": "^1.0.6",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "codecov": "^3.0.4",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.1",
    "eslint-plugin-node": "^11.1.0",
    "express": "^4.14.0",
    "get-random-port": "0.0.1",
    "lodash.isfunction": "^3.0.8",
    "mocha": "^6.1.4",
    "nop": "^1.0.0",
    "nyc": "^14.1.1",
    "proxyquire": "^1.7.10",
    "shx": "^0.3.2",
    "sinon": "^4.5.0",
    "source-map-support": "^0.5.12",
    "superagent": "^3.3.1",
    "ts-node": "^8.2.0",
    "typescript": "^4.1.0",
    "uncaughtException": "^1.0.0"
  },
  "optionalDependencies": {
    "express": "^4.0.0"
  }
}
